@model List<ResultProductWithCategoryDto>
@{
    ViewData["Title"] = "ProductListsWithCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ürün Adı</th>
                                <th>Fiyatı</th>
                                <th>Ürün Kategorisi</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.Category.Name</td>
                                    <td><a href="DeleteProduct/@item.Id" class="btn btn-danger">Sil</a></td>
                                    <td><a href="UpdateProduct/@item.Id" class="btn btn-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="CreateProduct" class="btn btn-primary">Yeni Ürün Ekle</a>
                </div>
            </div>
        </div>

    </div>
</section>

